public class ex14 {
    public static void main(String[] args) {
        int a=4,b=1,c=6;
        for (int i=0; i<a; i++) {
            for (int j=0; j<c; j++){
                System.out.print(" ");
            }
            c-=2;
            for (int j=0; j<b; j++){
                System.out.print("* ");
            }
            b+=2;
            System.out.println();
        }
    }
}
